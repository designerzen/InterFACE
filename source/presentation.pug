block scripts
	script(type="module").
		import Reveal from 'reveal.js'
		import Markdown from 'reveal.js/plugin/markdown/markdown.esm.js'

		let deck = new Reveal({
			plugins: [Markdown],
			// Activate the scroll view
			//- view: 'scroll',
			// Force the scrollbar to remain visible
			//- scrollProgress: true,
		})
		deck.initialize()
		console.log("Initialising Presentation", deck)

